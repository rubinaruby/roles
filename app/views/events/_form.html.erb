<%= simple_form_for(@event, url: events_path(calendar_current_params)) do |f| %>
  <%= f.error_notification %>
    <% f.hidden_field :status, value: 'active'%> 
  <div class="form-inputs">
    <%= f.input :start_time %>
    <%= f.input :end_time %>
    <%= f.input :title %>
    <%= f.input :description %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
