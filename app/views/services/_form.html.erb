<%= simple_form_for(@service, :remote => true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :service_name %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.association :category %> 
    or create category
    <%= f.input :new_category %>
    <%= f.hidden_field :id_client, :value => current_user.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
