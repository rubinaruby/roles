<div class ="well">
<h1>New worker</h1>
<%= simple_form_for(@worker, :remote =>  true) do |f| %>
	<%= f.simple_fields_for :user do |u|%>
	<div class="form-inputs">
		<%= u.input :email %>
	</div>
	<div class="form-inputs">	
		<%= u.input :password, hint: false, error_html: { id: 'password_error'} %>
	</div>
	<div class="form-inputs">	
		<%= u.input :password_confirmation %>
	</div>	
	<% end %>
	<%= f.submit%>
	<% end %>
<%= link_to 'Back', workers_path, :remote =>  true %>
</div>

